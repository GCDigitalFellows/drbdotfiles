# Add a variable pointing to these dotfiles!
export DOTDIR="$HOME/.dotfiles"

# Terminal Colors
export CLICOLOR=1
export TERM="xterm-256color"

# Bash History Options
export HISTSIZE=32768
export HISTFILESIZE=${HISTSIZE} # bash will remember N commands
export HISTCONTROL=ignoreboth   # ingore duplicates and spaces
export HISTIGNORE='&:ll:la:ls:[bf]g:exit:pwd:clear:history'
export HISTTIMEFORMAT='%b %d %H:%M:%S: '
shopt -s histappend
set cmdhist
export EDITOR=atom
export PAGER=less
export MANPAGER="less -X"

if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi
alias ls='command ls ${colorflag}'
alias l='ls -F'
alias la='l -ah'
alias ll='la -l'
export LSCOLORS=GxFxCxDxBxegedabagaced

alias h='history | grep'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias df='df -h'
alias mkdir='mkdir -p -v'
alias more='less'
export LESS="-X -M -E -R"

export PATH="$HOME/bin:/usr/local/bin:/usr/local/opt/coreutils/libexec/gnubin:${PATH}"

alias update='source $DOTDIR/etc/update.sh'

# pyenv
export PYENV_ROOT=/usr/local/var/pyenv
if which pyenv > /dev/null; then eval "$(pyenv init -)"; fi
if which pyenv-virtualenv-init > /dev/null; then eval "$(pyenv virtualenv-init -)"; fi
